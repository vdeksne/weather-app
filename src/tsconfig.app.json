{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "vite/client", "vue"],
    "typeRoots": ["../node_modules/@types"],
    "noEmit": false,
    "allowImportingTsExtensions": true
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"],
  "exclude": ["../node_modules"]
}
